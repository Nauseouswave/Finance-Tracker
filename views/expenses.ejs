<!DOCTYPE html>
<html>
<head>
    <title>Expenses</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('navbar.ejs', {currentPage: currentPage}) %>
    <div class="center-div">
        <h1>Expenses</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Amount (KWD)</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr data-id="<%= expense._id %>">
                        <td><%= expense.name %></td>
                        <td><%= expense.type %></td>
                        <td>KWD <%= expense.amount %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div id="myModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <form action="/expenses" method="POST">
                    <input type="text" name="name" placeholder="Purchase">
                    <select name="type">
                        <option value="" selected disabled>Select Category</option>
                        <option value="Groceries/Food">Groceries/Food</option>
                        <option value="Housing">Housing</option>
                        <option value="Utilities">Utilities</option>
                        <option value="Transportation">Transportation</option>
                        <option value="Health">Health</option>
                        <option value="Personal">Personal</option>
                        <option value="Entertainment">Entertainment</option>
                        <option value="Dining Out">Dining Out</option>
                        <option value="Education">Education</option>
                        <option value="Savings/Investments">Savings/Investments</option>
                    </select>
                    <input type="number" name="amount" placeholder="Amount (KWD)" step="any">
                    <input type="submit">
                </form>
            </div>
        </div>
        <div id="buttonContainer">
            <button id="editButton" style="display: none;">Edit</button>
            <button id="deleteButton" style="display: none;">Delete</button>
            <button id="addButton">Add Expense</button>
        </div>
    </div>

    <script>
        let selectedRow;

        document.querySelectorAll('tr[data-id]').forEach(row => {
            row.addEventListener('click', () => {
                selectedRow = row;
                document.getElementById('editButton').style.display = 'block';
                document.getElementById('deleteButton').style.display = 'block';
            });
        });

        document.getElementById('editButton').addEventListener('click', () => {
            const selectedId = selectedRow.getAttribute('data-id');
            window.location.href = '/expenses/' + selectedId + '/edit';
        });

        document.getElementById('deleteButton').addEventListener('click', () => {
            const selectedId = selectedRow.getAttribute('data-id');
            fetch('/expenses/' + selectedId, {
                method: 'DELETE',
            }).then(response => {
                if (response.ok) {
                    selectedRow.remove();
                    document.getElementById('editButton').style.display = 'none';
                    document.getElementById('deleteButton').style.display = 'none';
                } else {
                    throw new Error('Failed to delete expense');
                }
            }).catch(error => {
                console.error(error);
            });

            location.reload();
        });

        var modal = document.getElementById("myModal");
        var btn = document.getElementById("addButton");
        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function() {
            modal.style.display = "block";
        }

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
    
    
</body>
</html>